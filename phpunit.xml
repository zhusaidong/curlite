<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" verbose="true">
	<testsuites>
		<testsuite name="default">
			<directory>
				./tests/
			</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">
				src
			</directory>
		</whitelist>
	</filter>
</phpunit>